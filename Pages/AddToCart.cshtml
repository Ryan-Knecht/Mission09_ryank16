@page
@model Bookstore.Pages.AddToCartModel
@{
} 

@*Create the cart*@
<h2>Your cart</h2>

<table class="table table-bordered table-striped">

    @*Table header*@
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>

    @*Populate the table body*@
    <tbody>
        @foreach(var i in Model.cart.Items)
        {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price</td>
            <td>@(i.Quantity * i.Book.Price)</td>

            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId" />
                    <input type="hidden" name="returnUrl" value="Model.ReturnUrl" />
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>
        </tr>
        }
    </tbody>

    @*Add the footer to calculate the total*@
    <tfoot>
        <tr>
            <td colspan="3">Total:</td>
            <td>@Model.cart.CalculateTotal().ToString("c")</td>
        </tr>
    </tfoot>


</table>


@*Return to shopping*@
<div>
    <a class="btn btun-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="alert alert-success" role="alert">Thanks for shopping with us!</a>
    <a class="btn btn-primary" asp-controller="Purchase" asp-action="Checkout">Checkout</a>
</div>

@*I added an alert with the return to shopping button*@

